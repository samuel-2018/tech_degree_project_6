extends layout.pug

block content 
  - const {id, project_name, description, technologies, live_link, github_link, image_urls} = project;
 
  nav.grid-container.portfolio-breadcrumb
    a(href='/') ‚Üê Back
  article.grid-container.portfolio-intro.portfolio-project
    .grid-x
      .cell.small-6.medium-9.large-9

        h1 #{project_name}

        p.lead.text-light
          | #{description}

      .cell.portfolio-meta.small-6.medium-2.large-3
        h6 Technologies

        ul
        each tech in technologies
          li #{tech}
        br

        a.button.expanded(href=`${live_link}`) Live Demo
        a.button.expanded(href=`${github_link}`) GitHub Repo
    
    //- Project images
    //- The image file path is being defined in data.json.
    each image_url, index in image_urls
      unless index == 0
        img.image(src=`${image_url}`)