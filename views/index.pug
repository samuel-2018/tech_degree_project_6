extends layout.pug

block content 
  article.grid-container.portfolio-intro
    div

      h1 My Portfolio

      p.lead.text-light
        | Check out my recent demo projects
  article.grid-container.portfolio-index
    
    .grid-x.grid-margin-x.small-up-2.medium-up-2.large-up-3

      each project in projects
        unless project.archived
          .cell
            a(href=`/projects/${project.id}`)
              .thumbnail.zoom-n-clip__wrapper
                img.zoom-n-clip__image(src= project.image_urls[0])
                .text-overlay__wrapper
                  p.text-overlay View Project
              h5= project.project_name
      
